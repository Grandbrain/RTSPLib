#------------------------------------------------------------------------------#
#                                Base settings                                 #
#------------------------------------------------------------------------------#

QT				-=		gui
TEMPLATE		=		app
TARGET			=		rtspclientcli
CONFIG			+=		c11 c++11 strict_c strict_c++


#------------------------------------------------------------------------------#
#                              Project definitions                             #
#------------------------------------------------------------------------------#

DEFINES			+=															\
						QT_DEPRECATED_WARNINGS								\


#------------------------------------------------------------------------------#
#                             Project files settings                           #
#------------------------------------------------------------------------------#

HEADERS			+=															\

SOURCES			+=															\
						$$PWD/main.cpp										\


#------------------------------------------------------------------------------#
#                          Include directories settings                        #
#------------------------------------------------------------------------------#

INCLUDEPATH		+=															\
						$$PWD/../../										\
						$$PWD/../../RTSPClient								\

DEPENDPATH		+=															\
						$$PWD/../../										\
						$$PWD/../../RTSPClient								\


#------------------------------------------------------------------------------#
#                           External libraries settings                        #
#------------------------------------------------------------------------------#

LIBS			+=															\
						-L$$OUT_PWD/../../RTSPClient/ -lrtspclient			\
